<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingStart">@dimen/double_spacing</item>
        <item name="android:paddingEnd">@dimen/double_spacing</item>
    </style>

    <style name="AppTheme.Button.Primary">
        <item name="android:layout_width">@dimen/primary_button_width</item>
        <item name="android:textColor">@color/button_primary_text_color</item>
        <item name="android:background">@drawable/bg_button_primary</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="AppTheme.Button.Secondary">
        <item name="android:layout_width">@dimen/primary_button_width</item>
        <item name="android:textColor">@color/button_secondary_text_color</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:background">@drawable/bg_button_secondary</item>
    </style>

    <style name="AppTheme.Button.Google">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/colorSecondaryLight</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:background">@drawable/bg_button_google</item>
    </style>
</resources>